package epam.training.homework.task2;

import java.io.BufferedReader;
import java.io.IOException;
import java.io.InputStreamReader;
import java.time.YearMonth;

public class Solution_2{

    // Чтение введенного с клавиатуры числа, парсинг в Integer
    protected static int readInt(String comment) throws IOException {
        BufferedReader reader = new BufferedReader(new InputStreamReader(System.in));
        System.out.println(comment);
        String inputVal = reader.readLine();
        return Integer.parseInt(inputVal);
    }
    // С помощью объекта YearMonth и метода lengthOfMonth() находим длину заданного месяца
    protected static void calculateAndPrint(int year, int month) {
        YearMonth yearMonthObject = YearMonth.of(year, month);
        int daysInMonth = yearMonthObject.lengthOfMonth();
        System.out.println("Количество дней в месяце: " + daysInMonth);
    }
}

