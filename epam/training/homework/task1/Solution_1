package epam.training.homework.task1;

import java.io.IOException;
import java.io.InputStreamReader;
import java.io.BufferedReader;


public class Solution_1{
    // Чтение введенного с клавиатуры числа в виде String
    protected static String readValue() throws IOException {
        BufferedReader reader = new BufferedReader(new InputStreamReader(System.in));
        System.out.println("Введите число: ");
        String inputNumber;
        return inputNumber = reader.readLine();
    }

    /* Выделяем последний элемент введенного числа с помощью substring, парсим его в число,
    находим квадрат этого числа. Переводим получившееся число в вид  String, выделяем
    его последний элемент.
     */
    protected static String findLastSquereNumber(String a){
        String lastInputNumber = a.substring(a.length()-1);
        double squere = Math.pow(Integer.parseInt(lastInputNumber), 2);
        int squereFullNumber = (int) squere;
        String sq = Integer.toString(squereFullNumber);
        return sq.substring(sq.length()-1);
    }
}
