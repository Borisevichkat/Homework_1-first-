package epam.training.homework.task6;

import java.io.BufferedReader;
import java.io.IOException;
import java.io.InputStreamReader;

public class Solution_6{
    // Чтение введенного с клавиатуры числа, парсинг его в Integer
    protected static int readValue(String comment) throws IOException {
        BufferedReader reader = new BufferedReader(new InputStreamReader(System.in));
        System.out.println(comment);
        String sSec = reader.readLine();
        return Integer.parseInt(sSec);
    }

    // Подсчет часов, минут и секунд
    protected static void calculate(int sec){
        int hours = sec / 3600;
        int minutes = (sec - hours*3600) / 60;
        int seconds = sec - hours*3600 - minutes*60;
        System.out.println("Прошло " + hours + " часов "+ minutes + " минут " + seconds + " секунд.");
    }
}